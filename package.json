{
  "name": "geograph-me",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-scripts": "^2.1.8",
    "react-router-dom": "^4.3.1",
    "node-sass": "^4.11.0",
    "prop-types": "^15.7.2",
    "lodash": "^4.17.11",
    "classnames": "^2.2.6",
    "react-svg": "^7.2.6",
    "svg-pan-zoom": "^3.6.0",
    "world-countries": "^2.1.0",
    "react-flag-icon-css": "^1.0.25",
    "currency-codes": "^1.5.0",
    "currency-symbol-map": "^4.0.4"
  },
  "devDependencies": {
    "terser": "^3.14.1",
    "eslint-plugin-react": "^7.12.4",
    "stylelint": "^9.10.1",
    "stylelint-scss": "^3.5.4",
    "stylelint-order": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-recommended": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint src",
    "slint": "stylelint src",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parser": "babel-eslint",
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-scss",
      "stylelint-order"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended"
    ],
    "ignoreFiles": [
      "**/*.js",
      "**/*.json"
    ],
    "rules": {
      "indentation": 4,
      "block-opening-brace-newline-after": "always",
      "block-closing-brace-newline-before": "always",
      "selector-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "at-rule-no-vendor-prefix": true,
      "value-no-vendor-prefix": true,
      "property-no-vendor-prefix": true,
      "color-named": "always-where-possible",
      "string-quotes": "single",
      "no-empty-first-line": true,
      "no-eol-whitespace": true,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "export"
          ]
        }
      ],
      "order/order": [
        "custom-properties",
        "dollar-variables",
        "at-variables",
        "declarations",
        "rules",
        "at-rules",
        "less-mixins"
      ],
      "order/properties-order": [
        [
          "visibility",
          {
            "groupName": "positioning",
            "properties": [
              "position",
              "top",
              "right",
              "bottom",
              "left",
              "vertical-align",
              "z-index",
              "float"
            ]
          },
          {
            "groupName": "dimensions",
            "properties": [
              "min-width",
              "width",
              "max-width",
              "min-height",
              "height",
              "max-height"
            ]
          },
          {
            "groupName": "box-model/flex",
            "order": "flexible",
            "properties": [
              "align-content",
              "align-items",
              "align-self",
              "box-decoration-break",
              "box-sizing",
              "clear",
              "display",
              "flex-basis",
              "flex-direction",
              "flex-flow",
              "flex-grow",
              "flex-shrink",
              "flex-wrap",
              "float",
              "justify-content",
              "margin",
              "margin-bottom",
              "margin-left",
              "margin-right",
              "margin-top",
              "overflow",
              "overflow-x",
              "overflow-y",
              "padding",
              "padding-bottom",
              "padding-left",
              "padding-right",
              "padding-top"
            ]
          },
          {
            "groupName": "table",
            "order": "flexible",
            "properties": [
              "caption-side",
              "empty-cells",
              "table-layout"
            ]
          },
          {
            "groupName": "grid",
            "order": "flexible",
            "properties": [
              "grid",
              "grid-area",
              "grid-auto-columns",
              "grid-auto-flow",
              "grid-auto-rows",
              "grid-column",
              "grid-column-end",
              "grid-column-gap",
              "grid-column-start",
              "grid-gap",
              "grid-row",
              "grid-row-end",
              "grid-row-gap",
              "grid-row-start",
              "grid-template",
              "grid-template-areas",
              "grid-template-columns",
              "grid-template-rows"
            ]
          },
          {
            "groupName": "transformations",
            "order": "flexible",
            "properties": [
              "backface-visibility",
              "perspective",
              "perspective-origin",
              "transform",
              "transform-origin",
              "transform-style"
            ]
          },
          {
            "groupName": "typography",
            "order": "flexible",
            "properties": [
              "@font-face",
              "color",
              "column-count",
              "column-fill",
              "column-gap",
              "column-rule",
              "column-rule-color",
              "column-rule-style",
              "column-rule-width",
              "column-span",
              "column-width",
              "columns",
              "content",
              "direction",
              "font",
              "font-family",
              "font-kerning",
              "font-size",
              "font-size-adjust",
              "font-stretch",
              "font-style",
              "font-variant",
              "font-weight",
              "hanging-punctuation",
              "hyphens",
              "letter-spacing",
              "line-height",
              "list-style",
              "list-style-image",
              "list-style-position",
              "list-style-type",
              "quotes",
              "tab-size",
              "text-align",
              "text-align",
              "text-align-last",
              "text-align-last",
              "text-decoration",
              "text-decoration-color",
              "text-decoration-line",
              "text-decoration-style",
              "text-indent",
              "text-justify",
              "text-overflow",
              "text-shadow",
              "text-transform",
              "unicode-bidi",
              "white-space",
              "word-break",
              "word-spacing",
              "word-wrap",
              "writing-mode"
            ]
          },
          {
            "groupName": "visual",
            "order": "flexible",
            "properties": [
              "background",
              "background-attachment",
              "background-blend-mode",
              "background-clip",
              "background-color",
              "background-image",
              "background-origin",
              "background-position",
              "background-repeat",
              "background-size,",
              "border",
              "border-bottom",
              "border-bottom-color",
              "border-bottom-left-radius",
              "border-bottom-right-radius",
              "border-bottom-style",
              "border-bottom-width",
              "border-collapse",
              "border-color",
              "border-color",
              "border-image",
              "border-image-outset",
              "border-image-repeat",
              "border-image-slice",
              "border-image-source",
              "border-image-width",
              "border-left",
              "border-left-color",
              "border-left-style",
              "border-left-width",
              "border-radius",
              "border-right",
              "border-right-color",
              "border-right-style",
              "border-right-width",
              "border-spacing",
              "border-style",
              "border-top",
              "border-top-color",
              "border-top-left-radius",
              "border-top-right-radius",
              "border-top-style",
              "border-top-width",
              "border-width",
              "border-width",
              "box-shadow",
              "clip",
              "filter",
              "isolation",
              "mix-blend-mode",
              "object-fit",
              "object-position",
              "opacity",
              "outline",
              "outline-color",
              "outline-offset",
              "outline-style",
              "outline-width",
              "page-break-after",
              "page-break-before",
              "page-break-inside"
            ]
          },
          {
            "groupName": "animation",
            "order": "flexible",
            "properties": [
              "animation",
              "animation-delay",
              "animation-direction",
              "animation-duration",
              "animation-fill-mode",
              "animation-iteration-count",
              "animation-name",
              "animation-play-state",
              "animation-timing-function",
              "transition",
              "transition-delay",
              "transition-duration",
              "transition-property",
              "transition-timing-function"
            ]
          },
          {
            "groupName": "interaction",
            "order": "flexible",
            "properties": [
              "caret-color",
              "cursor",
              "pointer-events",
              "resize",
              "scroll-behavior",
              "user-select"
            ]
          }
        ],
        {
          "unspecified": "bottomAlphabetical",
          "severity": "warning"
        }
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
